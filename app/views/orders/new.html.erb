<h1><center>Mua Hang</center></h1>
<%= form_for @order do |f|%>
	<%= f.text_field :username, value: current_user.name %>
	<%= f.text_field :address, value: current_user.address %>
	<%= f.text_field :phone, value: current_user.phone %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :status, value: 0 %>
	<% current_cart.cart_products.each do |product| %>
		<%= f.fields_for :order_items do |ff| %>
			<%= ff.hidden_field :product_id, value: product.product_id  %>
			<%= ff.hidden_field :quantity, value: product.quantity  %>
			<%= ff.hidden_field :order_id, value: @order_id  %>
		<% end %>
	<% end %>
	<span class = "create-order">
		<%= f.submit 'Mua Hang', class: "createrorder" %>	
	</span>
<% end %>
